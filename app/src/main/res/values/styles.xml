<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="pass_saver_create_text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxStrokeColor">@color/blue500</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="pass_saver_create_til_edt">
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textColor">@color/black500</item>
    </style>

    <style name="common_button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="DSBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DSBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DSBottomSheetModalStyle</item>
    </style>

    <style name="circleLeftIconBottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>